# Tux Environment Configuration (.env)
# Copy this file to .env and fill in the values via Ansible variables or vault.

# Core Requirements
DEV_DATABASE_URL={{ tux_dev_database_url | default('') }}
PROD_DATABASE_URL={{ tux_prod_database_url | default('') }}

# Bot Tokens
DEV_BOT_TOKEN={{ tux_dev_bot_token | default('') }}
PROD_BOT_TOKEN={{ tux_prod_bot_token | default('') }}

# Dev Specific
DEV_COG_IGNORE_LIST={{ tux_dev_cog_ignore_list | default('') }}

# Prod Specific
PROD_COG_IGNORE_LIST={{ tux_prod_cog_ignore_list | default('') }}

# Optional Feature Config
SENTRY_DSN={{ tux_sentry_dsn | default('') }}
WOLFRAM_APP_ID={{ tux_wolfram_app_id | default('') }}
INFLUXDB_TOKEN={{ tux_influxdb_token | default('') }}
INFLUXDB_URL={{ tux_influxdb_url | default('') }}
INFLUXDB_ORG={{ tux_influxdb_org | default('') }}
GITHUB_APP_ID={{ tux_github_app_id | default('') }}
GITHUB_CLIENT_ID={{ tux_github_client_id | default('') }}
GITHUB_CLIENT_SECRET={{ tux_github_client_secret | default('') }}
GITHUB_PRIVATE_KEY_BASE64={{ tux_github_private_key_base64 | default('') }}
GITHUB_REPO_URL={{ tux_github_repo_url | default('') }}
GITHUB_REPO_OWNER={{ tux_github_repo_owner | default('') }}
GITHUB_REPO={{ tux_github_repo | default('') }}
MAILCOW_API_KEY={{ tux_mailcow_api_key | default('') }}
